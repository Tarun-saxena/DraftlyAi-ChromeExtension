{
  "manifest_version": 3,
  "name": "DraftlyAI",
  "description": "Draft context-aware comments directly inside comment boxes across the web.",
  "version": "0.1.0",

  "action": {
    "default_popup": "popup/index.html"
  },

  "icons": {
    "16": "icons/icon1.png"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/index.js"],
      "run_at": "document_idle",
      "type": "module"
    }
  ],

  "background": {
    "service_worker": "background/index.js"
  },

  "permissions": [
    "activeTab"
  ],

  "host_permissions": [
    "<all_urls>"
  ]
}
